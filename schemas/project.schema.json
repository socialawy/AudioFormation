{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AudioFormation Project",
  "description": "Single source of truth for an AudioFormation project.",
  "type": "object",
  "required": ["id", "version", "languages", "chapters", "characters"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]+$",
      "description": "Project identifier (alphanumeric, underscores, hyphens)."
    },
    "version": {
      "type": "string",
      "default": "1.0"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "languages": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "ISO language codes used in this project."
    },

    "chapters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "language", "source"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "language": { "type": "string" },
          "source": {
            "type": "string",
            "description": "Relative path to text file within project."
          },
          "character": {
            "type": "string",
            "description": "Character ID for single-narrator mode."
          },
          "default_character": {
            "type": "string",
            "description": "Default character for multi-speaker mode."
          },
          "mode": {
            "type": "string",
            "enum": ["single", "multi"],
            "default": "single"
          },
          "direction": {
            "type": "object",
            "properties": {
              "energy": { "type": "string" },
              "pace": { "type": "string" },
              "emotion": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },

    "characters": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "engine": {
            "type": "string",
            "enum": ["edge", "gtts", "xtts", "elevenlabs", "openai", "gemini"]
          },
          "voice": { "type": ["string", "null"] },
          "persona": { "type": "string" },
          "reference_audio": { "type": ["string", "null"] },
          "dialect": {
            "type": ["string", "null"],
            "description": "Arabic dialect code: msa, eg, sa, ae, lb, etc."
          }
        },
        "additionalProperties": true
      }
    },

    "generation": {
      "type": "object",
      "properties": {
        "chunk_max_chars": { "type": "integer", "default": 200, "minimum": 50 },
        "chunk_strategy": {
          "type": "string",
          "enum": ["breath_group", "sentence", "fixed"],
          "default": "breath_group"
        },
        "crossfade_ms": { "type": "integer", "default": 120, "minimum": 0 },
        "crossfade_min_ms": { "type": "integer", "default": 50 },
        "crossfade_overrides": {
          "type": "object",
          "description": "Per-engine crossfade: {\"edge\": 120, \"xtts\": 80, \"gtts\": 150}",
          "additionalProperties": { "type": "integer" }
        },
        "leading_silence_ms": { "type": "integer", "default": 100 },
        "max_retries_per_chunk": { "type": "integer", "default": 3, "minimum": 0 },
        "fail_threshold_percent": { "type": "number", "default": 5, "minimum": 0, "maximum": 100 },
        "fallback_scope": {
          "type": "string",
          "enum": ["chapter", "project"],
          "default": "chapter"
        },
        "fallback_chain": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["edge", "gtts"]
        },
        "xtts_temperature": { "type": "number", "default": 0.7, "minimum": 0.0, "maximum": 2.0 },
        "xtts_repetition_penalty": { "type": "number", "default": 5.0 },
        "xtts_vram_management": {
          "type": "string",
          "enum": ["empty_cache_per_chapter", "conservative", "reload_periodic"],
          "default": "empty_cache_per_chapter"
        },
        "xtts_reload_every_n": { "type": "integer", "default": 10 },
        "edge_tts_rate_limit_ms": { "type": "integer", "default": 200 },
        "edge_tts_concurrency": { "type": "integer", "default": 4 },
        "edge_tts_ssml": { "type": "boolean", "default": true }
      },
      "additionalProperties": true
    },

    "qc": {
      "type": "object",
      "properties": {
        "snr_method": { "type": "string", "default": "vad_noise_floor" },
        "snr_min_db": { "type": "number", "default": 20 },
        "max_duration_deviation_percent": { "type": "number", "default": 30 },
        "clipping_threshold_dbfs": { "type": "number", "default": -0.5 },
        "lufs_deviation_max": { "type": "number", "default": 3 },
        "pitch_jump_max_semitones": { "type": "number", "default": 12 },
        "boundary_artifact_check": { "type": "boolean", "default": true }
      },
      "additionalProperties": true
    },

    "mix": {
      "type": "object",
      "properties": {
        "master_volume": { "type": "number", "default": 0.9, "minimum": 0, "maximum": 1 },
        "target_lufs": { "type": "number", "default": -16.0 },
        "true_peak_limit_dbtp": { "type": "number", "default": -1.0 },
        "gap_between_chapters_sec": { "type": "number", "default": 2.0, "minimum": 0 },
        "ducking": {
          "type": "object",
          "properties": {
            "method": { "type": "string", "enum": ["vad", "energy"], "default": "vad" },
            "vad_model": { "type": "string", "default": "silero-vad" },
            "vad_threshold": { "type": "number", "default": 0.5 },
            "vad_threshold_ar": { "type": "number", "default": 0.45 },
            "look_ahead_ms": { "type": "integer", "default": 200 },
            "attack_ms": { "type": "integer", "default": 100 },
            "release_ms": { "type": "integer", "default": 500 },
            "attenuation_db": { "type": "number", "default": -12 },
            "frequency_aware": { "type": "boolean", "default": false }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },

    "export": {
      "type": "object",
      "properties": {
        "formats": {
          "type": "array",
          "items": { "type": "string", "enum": ["mp3", "wav", "flac", "m4b"] },
          "default": ["mp3"]
        },
        "mp3_bitrate": { "type": "integer", "default": 192 },
        "m4b_aac_bitrate": { "type": "integer", "default": 128 },
        "include_cover_art": { "type": "boolean", "default": true },
        "cover_art": { "type": ["string", "null"] },
        "chapter_transition": {
          "type": "string",
          "enum": ["silence", "file"],
          "default": "silence"
        },
        "chapter_transition_file": { "type": ["string", "null"] },
        "metadata": {
          "type": "object",
          "properties": {
            "author": { "type": "string" },
            "narrator": { "type": "string" },
            "publisher": { "type": "string" },
            "year": { "type": "integer" },
            "description": { "type": "string" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
